function _init()
    player = {
        x = 10,
        y = 10,
        dx = 0,
        dy = 0,
        health = 3,
        sprite = 0,
        abilities = {
            can_double_jump = false,
            can_dash = false
        },
        has_double_jumped = false,
        frames = {0,2,4},
    }
    
end

function _update()
 if player.sprite<4.9 then
 	player.sprite=player.sprite+.4
 else
 	player.sprite=0
 end   
end

function _draw()
    cls()
    spr(player.frames[flr(player.sprite)], player.x, player.y, 2, 2)
    
end

